<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content">

        <co.com.imagenybelleza.imagenybelleza.helpers.RobotoRegularTextView
            android:layout_width="match_parent"
            android:padding="16dp"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="Informacion de pedido"
            android:layout_height="wrap_content" />

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <co.com.imagenybelleza.imagenybelleza.helpers.RobotoRegularTextView
                    android:layout_width="wrap_content"
                    android:text="Numero de pedido: "
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

                <co.com.imagenybelleza.imagenybelleza.helpers.RobotoLightTextView
                    android:layout_width="wrap_content"
                    android:id="@+id/order_id_label"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <co.com.imagenybelleza.imagenybelleza.helpers.RobotoRegularTextView
                    android:layout_width="wrap_content"
                    android:text="Cliente: "
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

                <co.com.imagenybelleza.imagenybelleza.helpers.RobotoLightTextView
                    android:layout_width="wrap_content"
                    android:id="@+id/client_company_label"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <co.com.imagenybelleza.imagenybelleza.helpers.RobotoRegularTextView
                    android:layout_width="wrap_content"
                    android:text="Fecha de creacion: "
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

                <co.com.imagenybelleza.imagenybelleza.helpers.RobotoLightTextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/created_label"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <co.com.imagenybelleza.imagenybelleza.helpers.RobotoRegularTextView
                    android:layout_width="wrap_content"
                    android:text="Vendedor: "
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

                <co.com.imagenybelleza.imagenybelleza.helpers.RobotoLightTextView
                    android:layout_width="wrap_content"
                    android:id="@+id/seller_label"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <co.com.imagenybelleza.imagenybelleza.helpers.RobotoRegularTextView
                    android:layout_width="wrap_content"
                    android:text="Facturador: "
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

                <co.com.imagenybelleza.imagenybelleza.helpers.RobotoLightTextView
                    android:layout_width="wrap_content"
                    android:id="@+id/biller_label"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <co.com.imagenybelleza.imagenybelleza.helpers.RobotoRegularTextView
                    android:layout_width="wrap_content"
                    android:text="Estado actual: "
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

                <co.com.imagenybelleza.imagenybelleza.helpers.RobotoLightTextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/state_label"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <co.com.imagenybelleza.imagenybelleza.helpers.RobotoRegularTextView
                    android:layout_width="wrap_content"
                    android:text="Notas: "
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

                <co.com.imagenybelleza.imagenybelleza.helpers.RobotoLightTextView
                    android:layout_width="wrap_content"
                    android:id="@+id/notes_label"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>