<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <LinearLayout android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout android:id="@+id/markable_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:orientation="vertical">

                    <co.com.imagenybelleza.imagenybelleza.helpers.RobotoRegularTextView
                        android:id="@+id/code_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Codigo: "
                        android:textColor="@color/colorWhite" />

                    <co.com.imagenybelleza.imagenybelleza.helpers.RobotoRegularTextView
                        android:id="@+id/name_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <co.com.imagenybelleza.imagenybelleza.helpers.CircleView
                        android:layout_width="15dp"
                        android:id="@+id/state_view"
                        android:layout_marginRight="4dp"
                        android:layout_height="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <co.com.imagenybelleza.imagenybelleza.helpers.RobotoLightTextView
                            android:id="@+id/product_count_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/colorWhite" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout android:id="@+id/notes_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <co.com.imagenybelleza.imagenybelleza.helpers.RobotoLightTextView
                    android:layout_width="match_parent"
                    android:id="@+id/notes_label"
                    android:textColor="@color/colorWhite"
                    android:text="Notas:"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/actions_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/only_subitem_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:padding="4dp">

                <ImageButton android:id="@+id/pack_button"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="8dp"
                    android:background="#64DD17"
                    android:src="@drawable/ic_action_check" />

                <ImageButton android:id="@+id/product_pending_button"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="#E65100"
                    android:src="@drawable/ic_action_product_pending" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center">

                <ImageButton android:id="@+id/promoter_pending_button"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="8dp"
                    android:background="#FFD600"
                    android:src="@drawable/ic_action_promoter" />

                <ImageButton android:id="@+id/cancel_button"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="#BDBDBD"
                    android:src="@drawable/ic_action_cancel" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>