<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout android:padding="16dp" android:id="@+id/home_button"
        android:background="@color/colorAccent"
        android:gravity="center" android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView app:srcCompat="@drawable/ic_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <co.com.imagenybelleza.imagenybelleza.helpers.RobotoRegularTextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Regresa al pedido"
            android:textColor="@color/colorWhite"
            android:layout_marginStart="8dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:padding="8dp">

            <co.com.imagenybelleza.imagenybelleza.helpers.RobotoLightTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="Cod."
                android:textColor="@color/colorWhite" />

            <co.com.imagenybelleza.imagenybelleza.helpers.RobotoLightTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="Nombre"
                android:textColor="@color/colorWhite" />

            <co.com.imagenybelleza.imagenybelleza.helpers.RobotoLightTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="Precio"
                android:textColor="@color/colorWhite" />

            <co.com.imagenybelleza.imagenybelleza.helpers.RobotoLightTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.55"
                android:gravity="center"
                android:text="Desc"
                android:id="@+id/desc_label"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

        <ListView
            android:id="@+id/subitem_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>