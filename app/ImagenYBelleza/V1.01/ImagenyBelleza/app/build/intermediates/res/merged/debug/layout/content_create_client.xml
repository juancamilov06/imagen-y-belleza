<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_create_client"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="co.com.imagenybelleza.imagenybelleza.main.CreateClientActivity"
    tools:showIn="@layout/activity_create_client">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textColorHint="@color/colorWhite">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/company_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/company_prompt"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/colorWhite" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorWhite">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/contact_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name_prompt"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/colorWhite" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:paddingTop="16dp"
                android:layout_height="wrap_content">

                <co.com.imagenybelleza.imagenybelleza.helpers.RobotoRegularTextView
                    android:layout_width="match_parent"
                    android:text="Tipo de cliente"
                    android:textColor="@color/colorWhite"
                    android:layout_weight="0.6"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.AppCompatSpinner android:id="@+id/type_spinner"
                    android:layout_width="match_parent"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@color/colorWhite"
                    android:popupBackground="@color/colorPrimaryDark"/>


            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_height="wrap_content">

                <co.com.imagenybelleza.imagenybelleza.helpers.RobotoRegularTextView
                    android:layout_width="match_parent"
                    android:text="Ciudad"
                    android:textColor="@color/colorWhite"
                    android:layout_weight="0.6"
                    android:textSize="18sp"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.AppCompatSpinner android:id="@+id/city_spinner"
                    android:layout_width="match_parent"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@color/colorWhite"
                    android:popupBackground="@color/colorPrimaryDark"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorWhite">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/neighborhood_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Barrio"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/colorWhite" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textColorHint="@color/colorWhite">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/address_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/address_prompt"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/colorWhite" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorWhite">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/mail_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mail_prompt"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/colorWhite" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorWhite">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/nit_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nit_prompt"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <co.com.imagenybelleza.imagenybelleza.helpers.RobotoLightTextView android:layout_width="match_parent"
                android:text="Contacto"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:padding="8dp"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorWhite">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/phone_one_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Telefono 1"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColor="@color/colorWhite" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:textColorHint="@color/colorWhite">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ext_one_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="EXT"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColor="@color/colorWhite" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorWhite">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/phone_two_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Telefono 2"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColor="@color/colorWhite" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:textColorHint="@color/colorWhite">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ext_two_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="EXT"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColor="@color/colorWhite" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorWhite">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/phone_three_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Telefono 3"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColor="@color/colorWhite" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:textColorHint="@color/colorWhite">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ext_three_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="EXT"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColor="@color/colorWhite" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
