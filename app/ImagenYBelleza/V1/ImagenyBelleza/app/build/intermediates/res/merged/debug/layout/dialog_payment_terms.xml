<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/colorBackground">

    <LinearLayout android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <co.com.imagenybelleza.imagenybelleza.helpers.RobotoRegularTextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:text="Escoge el plazo de pago"
            android:layout_height="wrap_content" />

        <ListView android:id="@+id/payments_list_view"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:popupBackground="@color/colorPrimaryDark"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>